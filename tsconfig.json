{
  "include": ["widget"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "es2018", "es2019.Object"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
